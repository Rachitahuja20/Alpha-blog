<h1> Listing all articles</h1>

<h3><%= link_to "New Article", new_article_path %></h3>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <% @articles.each do |curarticle| %>
  <tr>
    <td> <%= curarticle.title %> </td>
    <td> <%= curarticle.description %></td>
    <td><%= link_to "Edit", edit_article_path(curarticle) %></td>
    <td><%= link_to "Show", article_path(curarticle) %></td>
    <td><%= link_to "Delete", article_path(curarticle), method: :delete, data: {confirm: "Are you sure"} %></td>
  </tr>
  <% end %>
</table>