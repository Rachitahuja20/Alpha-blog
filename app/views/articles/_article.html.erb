<% obj.each do |curarticle| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to curarticle.title, article_path(curarticle) %> 
        </div>
        <div class="article-body">
          <%= truncate(curarticle.description, length: 100) %>
        </div>
        <div class = "article-meta-details">
          <small> Created by: <%= curarticle.user.username  if curarticle.user %>, 
                              <%= time_ago_in_words(curarticle.created_at) %> ago, 
                              <%= time_ago_in_words(curarticle.updated_at) %> ago 
          </small>
        </div>
        
        <% if logged_in? && (current_user == curarticle.user || current_user.admin?) %>
          <div class="article-actions">
            <%= link_to "Edit", edit_article_path(curarticle), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", article_path(curarticle), class: "btn btn-xs btn-danger", method: :delete, data: {confirm: "Are you sure"} %></td>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>